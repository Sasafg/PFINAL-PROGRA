@using PFINAL_PROGRA.Models;


@{
    ViewBag.Title = "AddImage";
}



@model Imagen



<a href="">
    <img src="~/Assets/img/AddImg.png" class="img-fluid" alt="..."
         style="height: 300px; width: 600px; justify-content:center; position:relative">
</a>

@using (Html.BeginForm("AddImage", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.productoId)

    <div>
        @Html.LabelFor(model => model.imagen1)
        @Html.TextBoxFor(model => model.imagen1)
    </div>
    <div>
        <input type="file" name="file" />
    </div>
    <input type="submit" value="Add Image" />
}

}