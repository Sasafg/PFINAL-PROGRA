@using PFINAL_PROGRA.Models;



@model Producto
@{
    ViewBag.Title = "Edit";
}

<a href="">
    <img src="~/Assets/img/Edit.png" class="img-fluid" alt="..."
         style="height: 300px; width: 600px; justify-content:center; position:relative">
</a>


<hr />

@using (Html.BeginForm())

{
    @Html.HiddenFor(model => model.IdProducto)


    <div>
        @Html.LabelFor(model => model.nombreProducto)
        @Html.TextBoxFor(model => model.nombreProducto)
    </div>
    <div>
        @Html.LabelFor(model => model.precio)
        @Html.TextBoxFor(model => model.precio)
    </div>

    <div>
        @Html.LabelFor(model => model.Foto)
        @Html.TextBoxFor(model => model.Foto)
    </div>

    <div>
        @Html.LabelFor(model => model.categoriaId)
        @Html.TextBoxFor(model => model.categoriaId)
    </div>
    <div>
        @Html.LabelFor(model => model.FechaCreacion)
        @Html.TextBoxFor(model => model.FechaCreacion)
    </div>
    <input type="submit" value="Save" />





}